##R语言的文本处理
##str_c的用法
str_c(c(1:3),c("a","b","c"),sep="%")
str_c(c("a", "bc", "def"), collapse="---")
paste(c("x", "y"), c("a", "b"), sep="*")
name <- "李明"
tele <- "13512345678"
str_glue("姓名: {name}, ", "电话号码: {tele}")
char(c("a", "bc", "def", "北京"), type="bytes")
str_sub("term2017", 5, 8)
startsWith(c("xyz123", "tu004"), "tu")
